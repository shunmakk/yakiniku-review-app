
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center mb-4">
        <i class="fas fa-fire"></i>投稿
      </h1>
      
      <%= form_with model: @review, local: true do |f| %>
        <% if @review.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @review.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">基本情報</h5>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <%= f.label :customer_name, "お名前（ニックネーム可）" %>
              <%= f.text_field :customer_name, class: "form-control", placeholder: "焼肉太郎" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :visited_at, "来店日" %>
              <%= f.date_field :visited_at, class: "form-control", value: Date.current %>
            </div>
            
           <div class="mb-3">
  <%= f.label :overall_rating, "総合評価", class: "form-label" %>
  <div class="btn-group" role="group" aria-label="評価">
    <% (1..5).each do |i| %>
      <%= f.radio_button :overall_rating, i, class: "btn-check", id: "rating#{i}" %>
      <label class="btn btn-outline-warning" for="rating<%= i %>">
        <%= "★" * i %>
      </label>
    <% end %>
  </div>
</div>
            <div class="mb-3">
              <%= f.label :content, "コメント" %>
              <%= f.text_area :content, rows: 4, class: "form-control", 
                  placeholder: "お肉の質、サービス、雰囲気など、自由にご記入ください" %>
            </div>
          </div>
        </div>
        
      
        <div class="text-center mb-5">
          <%= f.submit "レビューを投稿", class: "btn btn-primary btn-lg px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>